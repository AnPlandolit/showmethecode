{% extends 'MainBundle::layout.html.twig' %}

{% import 'MainBundle:Macros:breadcrumb.html.twig' as breadcrumb %}

{% set section = 'examples' %}

{% block breadcrumb %}
{{ breadcrumb.show_example_detail('Doctrine2: Ordenar aleatoriamente', 'examples_query_random_order', 'Ordenar ciudades en ' ~ country.name) }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h2>Ciudades aleatorias en {{ country.name }}</h2>
            <ul>
                {% for city in cities %}
                    <li>{{ city.name }}, {{ city.province.name }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% set code = code(_self) %}
{% set article_link = 'http://showmethecode.es/php/doctrine2/doctrine2-ordenar-aleatoriamente/' %}
