{% extends 'MainBundle::layout.html.twig' %}

{% set section = 'examples' %}

{% block content %}
    <div class="row">
        <div class="span12">
            {% if app.session.flashbag.has('location') %}
                <div class="alert alert-success">
                    {% for flashMessage in app.session.flashbag.get('location') %}
                        <p>{{ flashMessage }}</p>
                    {% endfor %}
                </div>
            {% endif %}
            <ul>
                <li><a href="{{ path('examples_dependent_selects_location_new') }}">Crear Localización</a></li>
                <li>Editar Localización
                    <ul>
                        {% for city in cities %}
                            <li><a href="{{ path('examples_dependent_selects_location_edit', {'slug': city.slug}) }}">Editar {{ city.name }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% set code = code(_self) %}
