{% extends 'MainBundle::layout.html.twig' %}

{% import 'MainBundle:Macros:breadcrumb.html.twig' as breadcrumb %}

{% set section = 'examples' %}

{% block breadcrumb %}
{{ breadcrumb.show_example_detail('Embeber formularios con relaciones', 'examples_forms', 'Editando ' ~ user.profile.name ~ ' con perfil') }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <form action="{{ path('examples_forms_one_to_one_edit', {'username': user.username}) }}" method="POST" novalidate>
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-success">
                    Enviar
                </button>
            </form>
        </div>
    </div>
{% endblock %}

{% set code = code(_self) %}
{% set article_link = 'http://showmethecode.es/php/symfony/symfony2-embeber-formularios-con-relaciones/' %}
