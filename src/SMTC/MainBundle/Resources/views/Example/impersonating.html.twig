{% extends 'MainBundle::layout.html.twig' %}

{% set section = 'examples' %}

{% block content %}
    <div class="row">
        <div class="span12">
            <p>Soy {{ app.user.username }}</p>
            {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                <p><a href="{{ path('examples_impersonating', {'_change_to': '_exit'}) }}">Exit impersonating</a></p>
            {% else %}
                <p><a href="{{ path('examples_impersonating', {'_change_to': 'user'}) }}">Change to User</a></p>
                <p><a href="{{ path('examples_impersonating', {'_change_to': 'admin'}) }}">Change to Admin</a></p>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% set code = code(_self) %}