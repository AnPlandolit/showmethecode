{% extends 'MainBundle::layout.html.twig' %}

{% import 'MainBundle:Macros:breadcrumb.html.twig' as breadcrumb %}

{% set section = 'examples' %}

{% block breadcrumb %}
{{ breadcrumb.show_example_detail('Opción virtual en los formularios', 'examples_virtual_forms', 'Pájaro') }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h2>Pájaro</h2>
            <form action="{{ path('examples_virtual_forms_bird_create') }}" method="POST" novalidate>
                {{ form_widget(form) }}
                <div class="form-actions">
                    <button type="submit" class="btn btn-success">
                        Enviar
